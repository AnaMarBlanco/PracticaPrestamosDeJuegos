<Window x:Class="PracticaPrestamosDeJuegos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaPrestamosDeJuegos"
        mc:Ignorable="d"
        Title="Prestamos de Juegos" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="Registros">
                <MenuItem Header="Amigos" x:Name="AmigosMenuItem" Click="RAmigosMenuItem_Click"></MenuItem>
                <MenuItem Header="Juegos" x:Name="JuegosMenuItem" Click="RJuegosMenuItem_Click"></MenuItem>
                <MenuItem Header="Entradas" x:Name="EntradasMenuItem" Click="EntradasMenuItem_Click"></MenuItem>
            <MenuItem Header="Prestamos" x:Name="PrestamosMenuItem" Click="RPrestamosMenuItem_Click" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Consultas">
                <MenuItem Header="Amigos" Click="CAmigosMenuItem_Click"></MenuItem>
                <MenuItem Header="Juegos"  Click="CJuegosMenuItem_Click"></MenuItem>
                <MenuItem Header="Prestamos"  Click="CPrestamosMenuItem_Click" ></MenuItem>

            </MenuItem>
            <MenuItem Header="Ayuda"></MenuItem>
        </Menu>

    </Grid>
</Window>
